<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.image.attached? %>
         <%= image_tag( user.image, size: "100x100") %>
      <% else %>
           <%= image_tag( "no_image.png", alt: "photo" , style: "max-width: 100px;") %>
      <% end %>
      <%= link_to user.name, user %>
      <%=  user.email %>

    </li>
  <% end %>
</ul>
